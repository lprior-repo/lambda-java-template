<?xml version="1.0" encoding="UTF-8"?>
<FindBugsFilter>
    <!-- Exclude patterns for AWS Lambda Java template -->
    
    <!-- Test classes - exclude from production analysis -->
    <Match>
        <Class name="~.*Test.*"/>
    </Match>
    <Match>
        <Class name="~.*TestConfig.*"/>
    </Match>
    <Match>
        <Source name="~.*test.*"/>
    </Match>
    
    <!-- Generated code -->
    <Match>
        <Class name="~.*\$\$Lambda\$.*"/>
    </Match>
    
    <!-- AWS Lambda specific exclusions -->
    <Match>
        <!-- Lambda handlers often have public constructors -->
        <Bug pattern="UUF_UNUSED_PUBLIC_OR_PROTECTED_FIELD"/>
        <Class name="~.*Handler"/>
    </Match>
    
    <Match>
        <!-- Request/Response POJOs need public access -->
        <Bug pattern="UUF_UNUSED_PUBLIC_OR_PROTECTED_FIELD"/>
        <Class name="~.*Request"/>
    </Match>
    <Match>
        <Bug pattern="UUF_UNUSED_PUBLIC_OR_PROTECTED_FIELD"/>
        <Class name="~.*Response"/>
    </Match>
    
    <!-- Jackson serialization requires public getters/setters -->
    <Match>
        <Bug pattern="UPM_UNCALLED_PRIVATE_METHOD"/>
        <Method name="~get.*"/>
    </Match>
    <Match>
        <Bug pattern="UPM_UNCALLED_PRIVATE_METHOD"/>
        <Method name="~set.*"/>
    </Match>
    
    <!-- False positives for Lambda environment -->
    <Match>
        <!-- System.getenv is common in Lambda -->
        <Bug pattern="DMI_HARDCODED_ABSOLUTE_FILENAME"/>
        <Method name="~.*getenv.*"/>
    </Match>
    
    <!-- PowerTools annotations may trigger unused field warnings -->
    <Match>
        <Bug pattern="UUF_UNUSED_FIELD"/>
        <Class name="~.*Handler"/>
        <Field name="LOGGER"/>
    </Match>
    
    <!-- Lambda runtime specific exclusions -->
    <Match>
        <!-- RequestHandler interface requires specific signature -->
        <Bug pattern="UMAC_UNCALLABLE_METHOD_OF_ANONYMOUS_CLASS"/>
        <Method name="handleRequest"/>
    </Match>
    
    <!-- Exception handling in Lambda context -->
    <Match>
        <!-- Lambda functions often catch broad exceptions for error handling -->
        <Bug pattern="REC_CATCH_EXCEPTION"/>
        <Class name="~.*Handler"/>
        <Method name="handleRequest"/>
    </Match>
    
    <!-- Serialization warnings for JSON POJOs -->
    <Match>
        <Bug pattern="SE_NO_SERIALVERSIONID"/>
        <Class name="~.*Request"/>
    </Match>
    <Match>
        <Bug pattern="SE_NO_SERIALVERSIONID"/>
        <Class name="~.*Response"/>
    </Match>
    <Match>
        <Bug pattern="SE_NO_SERIALVERSIONID"/>
        <Class name="~.*Product.*"/>
    </Match>
    
    <!-- Exclude utility classes that might have static methods -->
    <Match>
        <Bug pattern="UPM_UNCALLED_PRIVATE_METHOD"/>
        <Class name="~.*Utils"/>
    </Match>
    
    <!-- AWS SDK client initialization patterns -->
    <Match>
        <Bug pattern="MS_SHOULD_BE_FINAL"/>
        <Field name="~.*Client"/>
    </Match>
    
    <!-- ObjectMapper is commonly used as static -->
    <Match>
        <Bug pattern="MS_SHOULD_BE_FINAL"/>
        <Field name="OBJECT_MAPPER"/>
    </Match>
    
    <!-- Constant field patterns in Lambda handlers -->
    <Match>
        <Bug pattern="MS_SHOULD_BE_FINAL"/>
        <Field name="~TABLE_NAME.*"/>
    </Match>
</FindBugsFilter>